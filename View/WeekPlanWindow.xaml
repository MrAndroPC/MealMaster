                                        </Style>
                                    </ListBox.ItemContainerStyle>

                                </ListBox>
                                <Button Content="Add New Recipe" Click="AddNewRecipe_Click" Grid.Row="1" VerticalAlignment="Bottom" Margin="5" Visibility="{Binding DataContext.DataContext.IsUserMade, Converter={StaticResource BooleanToVisibilityConverter}}"/>
