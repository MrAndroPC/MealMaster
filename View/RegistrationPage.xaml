<Page x:Class="MealMaster.Auth.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Registration">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Username" />
            <TextBox Name="NewUsernameTextBox" />
            <TextBlock Text="Password" />
            <PasswordBox Name="NewPasswordBox" />
            <TextBlock Text="Confirm Password" />
            <PasswordBox Name="ConfirmPasswordBox" />
            <Button Content="Register" Click="Register_Click"/>
            <Button Content="I have an account" Click="HaveAccount_Click" />
        </StackPanel>
    </Grid>
</Page>
