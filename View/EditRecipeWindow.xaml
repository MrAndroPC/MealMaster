<Window x:Class="MealMaster.View.EditRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Creation" Height="400" Width="600">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Recipe Name:"/>
            <TextBox x:Name="RecipeNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Recipe Description:"/>
            <TextBox x:Name="RecipeDescriptionTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Ingredients:"/>
            <ListBox x:Name="IngredientsListBox" ItemsSource="{Binding Ingredients}" Margin="0,0,0,10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" />
                            <Button Content="Edit Ingredient" Click="EditIngredient_Click" />
                            <Button Content="Remove Ingredient" Click="RemoveIngredient_Click" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Content="Add Ingredient" Click="AddIngredient_Click"/>
            <Button Content="Save Recipe" Click="SaveRecipe_Click"/>
        </StackPanel>
    </Grid>
</Window>
